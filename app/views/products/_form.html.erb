<%= form_for @product do |f| %>
  <p>
    <%= f.label "Product Name" %><br>
    <%= f.text_field "name" %>
  </p>
  <p>
    <%= f.label "Product Description" %><br>
    <%= f.text_field "description" %>
  </p>
  <p>
    <%= f.label "Product Price" %><br>
    <%= f.text_field "price_in_cents" %>
  </p>
  <p>
    <%= f.submit "Save" %> 
  </p>
<% end %>